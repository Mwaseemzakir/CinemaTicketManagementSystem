@using CinemaTicketManagementSystem.Utils
@model CinemaTicketManagementSystem.Models.Actor
<h4>Detailed Information of @Model.FullName</h4>
<hr />
<div class="row">
    <div class="col-md-3 offset-4">
        <div class="form-group">
            <label asp-for="FullName">FullName</label>
            <input type="text" class="form-control" id="FullName" placeholder="e.g. Amir Khan" asp-for="FullName" readonly>

        </div>

        <div class="form-group">
            <label asp-for="Bio">Bio</label>
            <input type="text" class="form-control" id="Bio" placeholder="Comes with Innovation.." asp-for="Bio" readonly>

        </div>

        <div class="form-group">
            <label asp-for="Country">Country</label>
            <select class="form-control selectpicker countrypicker" data-flag="true" asp-for="Country" disabled>
                <option> Select  Country</option>
                @foreach (var item in Countries.GetAll())
                {
                    <option>@item</option>
                }
                <option></option>
            </select>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePictureUrl">Picture</label>
            @if (@Model.ProfilePictureUrl != null)
            {
                <img asp-for="ProfilePictureUrl" src="@Model.ProfilePictureUrl" alt="@Model.FullName" class="form-control-file" />

            }
            @if (@Model.ProfilePictureUrl == null)
            {
                <p>Picture was not provided</p>
            }
        </div>
        <div>
            <a class="btn btn-info float-left" asp-action="Index">Back</a>
        </div>
        <div>
            <a class="btn btn-warning float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
        <div>
        </div>

    </div>
</div>




@section Scripts
    {
         @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
         }
    }


