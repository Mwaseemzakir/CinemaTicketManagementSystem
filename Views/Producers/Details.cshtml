@using CinemaTicketManagementSystem.Utils
@model CinemaTicketManagementSystem.Models.Producer
<h4>Producer Details</h4>
<hr />


<div class="container">

    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="form-group">
                <label asp-for="FullName">Name</label>
                <input type="text" class="form-control" id="Name" placeholder="e.g. ABC" asp-for="FullName" readonly>

            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="form-group">
                <label asp-for="Country">Country</label>
                <select class="form-control selectpicker countrypicker" data-flag="true" asp-for="Country" disabled>
                    <option> Select  Country</option>
                    @foreach (var item in Countries.GetAll())
                    {
                        <option>@item</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-12 col-sm-6">
            <div class="form-group">
                <label asp-for="Bio">Bio</label>
                <textarea  class="form-control" id="Bio" placeholder="e.g. Non stop action" asp-for="Bio" readonly>
                </textarea>

            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="form-group">
                <label asp-for="ProfilePictureUrl">Image</label>
                <input type="file" class="form-control-file" id="ProfilePictureUrl" asp-for="ProfilePictureUrl">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <a class="btn btn-primary float-left" asp-action="Index">Back to List</a>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <a class="btn btn-info float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </div>
        </div>
    </div>

</div>
@section Scripts
    {
         @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
         }
    }
