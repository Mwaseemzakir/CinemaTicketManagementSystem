@using CinemaTicketManagementSystem.Utils
@model CinemaTicketManagementSystem.Models.Producer
<h4>Add New Producer</h4>
<hr />


<div class="container">
    <form asp-action="Create">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="form-group">
                    <label asp-for="FullName">Name</label>
                    <input type="text" class="form-control" id="Name" placeholder="e.g. ABC" asp-for="FullName">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="form-group">
                    <label asp-for="Bio">Bio</label>
                    <input type="text" class="form-control" id="Bio" placeholder="e.g. Non stop action" asp-for="Bio">
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="form-group">
                <label asp-for="Country">Country</label>
                <select class="form-control selectpicker countrypicker" data-flag="true" asp-for="Country">
                    <option> Select  Country</option>
                    @foreach (var item in Countries.GetAll())
                    {
                        <option>@item</option>
                    }
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            </div>
            


            <div class="col-md-3 col-sm-6">
                <div class="form-group">
                    <label asp-for="ProfilePictureUrl">Image</label>
                    <input type="file" class="form-control-file" id="ProfilePictureUrl" asp-for="ProfilePictureUrl">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <a class="btn btn-primary float-left" asp-action="Index">Back to List</a>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info float-right" />
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts
    {
         @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
         }
    }
